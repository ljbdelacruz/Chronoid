@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_materializeLayoutEmployee.cshtml";
}
@* Routes *@
<script src="~/Assets/angularjs/Pages/Employee/routes/main/module.js"></script>
<script src="~/Assets/angularjs/Pages/Employee/routes/main/MainCtrl.page.js"></script>
<script src="~/Assets/angularjs/Pages/Employee/routes/Profile/module.js"></script>
<script src="~/Assets/angularjs/Pages/Employee/routes/Profile/ProfileCtrl.page.js"></script>


<!--Main App-->
<script src="~/Assets/angularjs/Pages/Employee/app.js"></script>
<script src="~/Assets/angularjs/Pages/Employee/appCtrl.js"></script>
<main ng-controller="EmployeeAppCtrl">
    <div class="row">
        <div class="col-lg-12" style="height:200px;">
            <card-container1 style="margin:0px !important; width:100%; height:150px; position:fixed !important; z-index:100; top:0px !important; left:0px !important;">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-3">
                                <img src="@ViewBag.ProfileImage" style="border-radius:100%; width:100px; height:100px; border: 2px solid black;"/>
                            </div>
                            <div class="col-lg-9">
                                <div class="row" style="margin-top:25px;">
                                    <div class="col-lg-12" style="font-size:20px; color:#3e8acd;">
                                        @ViewBag.Username
                                    </div>
                                    <div class="col-lg-12" style="color:#366e87">
                                        @ViewBag.JobTitle
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        @*<img src="~/Assets/images/logomain.png" style="width:50%; height:100px; margin-left:25%;" />*@
                    </div>
                    <div class="col-lg-4">
                        <h3 class="pull-right" style="color:#366e87; margin-top:25px;">@ViewBag.Week, @ViewBag.Month @ViewBag.Day,  @ViewBag.Year</h3>
                    </div>
                </div>
            </card-container1>
        </div>
        <div class="col-lg-1">
            <navbar-tie-box items="navOptions" event="navController.OptionSelect"></navbar-tie-box>
        </div>
        <div class="col-lg-11 container body-content">
            <div ng-view></div>
        </div>
    </div>
</main>